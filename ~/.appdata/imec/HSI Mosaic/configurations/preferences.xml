                <parameter version="0" type="3" name="Pipeline selector" description="Pipeline enum case" group="runtime">
                    <value>1</value>
                    <validators>
                        <criterium>
                            <value>0</value>
                            <name>FULL_COVERAGE</name>
                        </criterium>
                        <criterium>
                            <value>1</value>
                            <name>REFERENCE_SPECTRUM</name>
                        </criterium>
                    </validators>
                </parameter>
            </parameters>
